<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".RegistroPokemon">

	<android.support.design.widget.TextInputLayout
			android:layout_width="395dp"
			android:layout_height="56dp"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="82dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp"
			android:layout_marginBottom="32dp"
			app:layout_constraintBottom_toTopOf="@+id/textInputLayout7"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			android:layout_marginRight="8dp"
			android:id="@+id/textInputLayout8">

		<android.support.design.widget.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="ID"
				android:id="@+id/idInputPokemon"/>
	</android.support.design.widget.TextInputLayout>

	<android.support.design.widget.TextInputLayout
			android:layout_width="395dp"
			android:layout_height="56dp"
			android:id="@+id/textInputLayout7"
			android:layout_marginTop="32dp"
			app:layout_constraintTop_toBottomOf="@+id/textInputLayout8"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginBottom="16dp"
			app:layout_constraintBottom_toTopOf="@+id/inputNivel">

		<android.support.design.widget.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="NOMBRE"
				android:id="@+id/idNombrePokemon"/>
	</android.support.design.widget.TextInputLayout>

	<EditText
			android:layout_width="wrap_content"
			android:layout_height="46dp"
			android:inputType="number"
			android:ems="10"
			android:id="@+id/inputNivel"
			app:layout_constraintTop_toBottomOf="@+id/textInputLayout7"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="190dp"
			android:layout_marginRight="190dp"
			android:layout_marginBottom="7dp"
			app:layout_constraintBottom_toTopOf="@+id/inputTipo"
			android:layout_marginTop="16dp"
			android:hint="NIVEL"/>

	<Spinner
			android:layout_width="395dp"
			android:layout_height="24dp"
			android:id="@+id/inputTipo"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginBottom="108dp"
			app:layout_constraintBottom_toTopOf="@+id/button"
			android:layout_marginTop="32dp"
			app:layout_constraintTop_toBottomOf="@+id/inputNivel"
			app:layout_constraintHorizontal_bias="0.0"/>

	<Button
			android:text="GUARDAR"
			android:layout_width="395dp"
			android:layout_height="48dp"
			android:id="@+id/botonGuardarPokemon"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginTop="105dp"
			app:layout_constraintTop_toBottomOf="@+id/inputTipo"
			android:layout_marginBottom="227dp"
			app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>