<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".RegistroEntrenador">


	<Button
			android:text="REGISTRAR ENTRENADOR"
			android:layout_width="405dp"
			android:layout_height="78dp"
			android:id="@+id/botonRegistrarEntrenador"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="1.0"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="114dp"
			android:layout_marginTop="76dp"
			app:layout_constraintTop_toBottomOf="@+id/inputPokemon"/>

	<android.support.design.widget.TextInputLayout
			android:layout_width="411dp"
			android:layout_height="111dp"
			android:id="@+id/textInputLayout3"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="32dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/textInputLayout">

		<android.support.design.widget.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="IDENTIFICACION"
				android:id="@+id/idInput"/>
	</android.support.design.widget.TextInputLayout>

	<android.support.design.widget.TextInputLayout
			android:layout_width="411dp"
			android:layout_height="110dp"
			android:id="@+id/textInputLayout"
			app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/textInputLayout2">

		<android.support.design.widget.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="NOMBRE "
				android:id="@+id/nombreInput"/>
	</android.support.design.widget.TextInputLayout>

	<android.support.design.widget.TextInputLayout
			android:layout_width="411dp"
			android:layout_height="78dp"
			android:id="@+id/textInputLayout2"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
			app:layout_constraintEnd_toEndOf="parent"
			>

		<android.support.design.widget.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="PAIS DE ORIGEN"
				android:id="@+id/paisOrigenInput"/>
	</android.support.design.widget.TextInputLayout>

	<Spinner
			android:layout_width="401dp"
			android:layout_height="30dp"
			tools:layout_editor_absoluteX="0dp"
			android:id="@+id/inputPokemon"
			android:layout_marginTop="18dp"
			app:layout_constraintTop_toBottomOf="@+id/textView"
			android:layout_marginBottom="16dp"
			app:layout_constraintBottom_toTopOf="@+id/botonRegistrarEntrenador"/>

	<TextView
			android:text="SELECCIONA UN POKEMON"
			android:layout_width="wrap_content"
			android:layout_height="19dp"
			tools:layout_editor_absoluteX="0dp"
			android:id="@+id/textView"
			android:layout_marginTop="40dp"
			app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
			android:layout_marginBottom="1dp"
			app:layout_constraintBottom_toTopOf="@+id/inputPokemon"/>


</android.support.constraint.ConstraintLayout>