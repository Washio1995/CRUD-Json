<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".AccionEntrenador">

	<android.support.design.widget.TextInputLayout
			android:layout_width="411dp"
			android:layout_height="110dp"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="56dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/textInputLayout4"
			android:id="@+id/textInputLayout5">

		<android.support.design.widget.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="ID"
				android:id="@+id/inputId"/>
	</android.support.design.widget.TextInputLayout>

	<android.support.design.widget.TextInputLayout
			android:layout_width="411dp"
			android:layout_height="110dp"
			android:id="@+id/textInputLayout4"
			app:layout_constraintTop_toBottomOf="@+id/textInputLayout5"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/textInputLayout6">

		<android.support.design.widget.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="NOMBRE"
				android:id="@+id/inputNombre"/>
	</android.support.design.widget.TextInputLayout>

	<android.support.design.widget.TextInputLayout
			android:layout_width="408dp"
			android:layout_height="110dp"
			android:id="@+id/textInputLayout6"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/textInputLayout4"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/botonActualizarEntrenador">

		<android.support.design.widget.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="NACIONALIDAD"
				android:id="@+id/inputNacionalidad"/>
	</android.support.design.widget.TextInputLayout>

	<Button
			android:text="ELIMINAR"
			android:layout_width="403dp"
			android:layout_height="50dp"
			android:id="@+id/botonEliminarEntrenador"
			android:layout_marginTop="68dp"
			app:layout_constraintTop_toBottomOf="@+id/textInputLayout6"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="4dp"
			android:layout_marginStart="4dp"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="4dp"
			android:layout_marginRight="4dp"
			android:layout_marginBottom="32dp"
			app:layout_constraintBottom_toTopOf="@+id/botonActualizarEntrenador"/>

	<Button
			android:text="ACTUALIZAR"
			android:layout_width="403dp"
			android:layout_height="46dp"
			android:id="@+id/botonActualizarEntrenador"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="149dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="4dp"
			android:layout_marginStart="4dp"
			android:layout_marginTop="32dp"
			app:layout_constraintTop_toBottomOf="@+id/botonEliminarEntrenador"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="4dp"
			android:layout_marginRight="4dp"
			app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>