<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".AccionPokemon">

	<android.support.design.widget.TextInputLayout
			android:layout_width="395dp"
			android:layout_height="56dp"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="56dp"
			android:layout_marginBottom="39dp"
			app:layout_constraintBottom_toTopOf="@+id/textInputLayout9"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="16dp"
			android:layout_marginRight="16dp"
			android:id="@+id/textInputLayout10">

		<android.support.design.widget.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="ID"
				android:id="@+id/inputIdPokemonAct"/>
	</android.support.design.widget.TextInputLayout>

	<EditText
			android:layout_width="wrap_content"
			android:layout_height="45dp"
			android:inputType="number"
			android:ems="10"
			android:hint="NIVEL"
			android:layout_marginTop="16dp"
			app:layout_constraintTop_toBottomOf="@+id/textInputLayout9"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp"
			android:layout_marginBottom="36dp"
			app:layout_constraintBottom_toTopOf="@+id/inputTipoPokemonAct"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="182dp"
			android:layout_marginRight="182dp"
			android:id="@+id/inputNivelPokemonAct"/>

	<Spinner
			android:layout_width="395dp"
			android:layout_height="24dp"
			android:id="@+id/inputTipoPokemonAct"
			android:layout_marginTop="26dp"
			app:layout_constraintTop_toBottomOf="@+id/inputNivelPokemonAct"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginBottom="84dp"
			app:layout_constraintBottom_toTopOf="@+id/botonEliminarPokemon"/>

	<Button
			android:text="ELMINAR"
			android:layout_width="395dp"
			android:layout_height="48dp"
			android:id="@+id/botonEliminarPokemon"
			android:layout_marginTop="4dp"
			app:layout_constraintTop_toBottomOf="@+id/inputTipoPokemonAct"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginBottom="27dp"
			app:layout_constraintBottom_toTopOf="@+id/botonActualizarPokemon"/>

	<Button
			android:text="ACTUALIZAR"
			android:layout_width="395dp"
			android:layout_height="48dp"
			android:id="@+id/botonActualizarPokemon"
			android:layout_marginTop="16dp"
			app:layout_constraintTop_toBottomOf="@+id/botonEliminarPokemon"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginBottom="24dp"
			app:layout_constraintBottom_toBottomOf="parent"/>

	<android.support.design.widget.TextInputLayout
			android:layout_width="395dp"
			android:layout_height="56dp"
			android:id="@+id/textInputLayout9"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/textInputLayout10"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp"
			android:layout_marginBottom="32dp"
			app:layout_constraintBottom_toTopOf="@+id/inputNivelPokemonAct"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			android:layout_marginRight="8dp">

		<android.support.design.widget.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="NOMBRE"
				android:id="@+id/inputNombrePokemonAct"/>
	</android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>